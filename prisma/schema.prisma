generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  phoneNumber String  @map("phone_number")
  countryCode String  @default("portugal") @map("country_code")
  name        String? @default("Convidado")

  @@id([phoneNumber, countryCode])
}
